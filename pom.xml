<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kohsuke</groupId>
  <artifactId>access-modifier</artifactId>
  <version>1.0-SNAPSHOT</version>

  <name>Custom access modifier for Java</name>
  <packaging>pom</packaging>

  <modules>
    <module>access-modifier-annotation</module>
    <module>access-modifier-checker</module>
  </modules>

  <repositories>
    <repository>
      <id>java.net2</id>
      <url>http://maven.dyndns.org/2/</url>
    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>java.net-m2-repository</id>
      <url>java-net:/maven2-repository/trunk/repository/</url>
    </repository>
    <!--site>
      <id>kenai</id>
      <url>dav:https://kenai.com/website/access-modifier/</url>
    </site-->
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.1</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
    <extensions>
      <extension>
        <groupId>org.jvnet.wagon-svn</groupId>
        <artifactId>wagon-svn</artifactId>
        <version>1.9</version>
      </extension>
    </extensions>
  </build>
 
  <scm>
    <connection>scm:git:git://github.com/kohsuke/access-modifier.git</connection>
  </scm>
</project>
